@{
    ViewData["Title"] = "SignIn";
}
@model LessonTime.WEB.Models.SignInInput
<section class="vh-100" style="background-color: #508bfc;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <h3 class="mb-5">Sign in</h3>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <form asp-controller="Auth" asp-action="SignIn" method="post">
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input type="email" value="Osman@outlook.com" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input type="password" value="Osman80*80" asp-for="Password" class="form-control" id="exampleInputPassword1">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>

                            <!-- Checkbox -->
                            <div class="form-check d-flex justify-content-start mb-4">
                                <input class="form-check-input" type="checkbox" value="true" id="rememberMe" name="RememberMe" />
                                <label class="form-check-label" for="rememberMe"> Remember password </label>
                            </div>

                            <button class="btn btn-primary btn-lg btn-block" type="submit"><i class="fas fa-sign-in-alt me-2"></i>Login</button>

                            <hr class="my-4">

                            <div class="mb-2">
                                <button class="btn btn-lg btn-block btn-primary" style="background-color: #dd4b39;"><i class="fab fa-google me-2"></i> Sign in with Google</button>
                            </div>
                            <div class="mb-2">
                                <button class="btn btn-lg btn-block btn-primary" style="background-color: #3b5998;"><i class="fab fa-facebook-f me-2"></i>Sign in with Facebook</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>